<Page
    x:Class="EmplyeeBook.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EmplyeeBook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="50,50,0,0">
            <TextBlock Foreground="Red" FontSize="25" Text="Name" Margin="20" Width="100"/>
            <TextBlock Foreground="Green" FontSize="25" Text="{Binding Name}" Margin="20" Width="100"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="50,150,0,0" >
            <TextBlock Foreground="Red" FontSize="25" Text="Title" Margin="20" Width="100"/>
            <TextBlock Foreground="Green" FontSize="25" Text="{Binding Title}" Margin="20" Width="100"/>
        </StackPanel>
       
    </Grid>
</Page>

